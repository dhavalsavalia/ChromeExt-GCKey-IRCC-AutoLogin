{
	"manifest_version": 2,
	"name": "IRCC Check",
	"description": "jO's Chrome Extension for IRCC Login Automation",
	"version": "1.0",
	"permissions": [
		"tabs",
		"<all_urls>"
	],
	"browser_action": {
		"default_icon": {
			"19": "images/icons/19.png",
			"38": "images/icons/38.png"
		},
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": [
				"https://www.canada.ca/en/immigration-refugees-citizenship/services/application/account.html"
			],
			"js": [
				"jquery-3.1.0.min.js",
				"content_gckey_init.js"
			]
		},
		{
			"matches": [
				"https://clegc-gckey.gc.ca/*"
			],
			"js": [
				"jquery-3.1.0.min.js",
				"content_login.js"				
			]
		},
		{
			"matches": [
				"https://onlineservices-servicesenligne.cic.gc.ca/mycic/termsAndConditions",
				"https://onlineservices-servicesenligne.cic.gc.ca/mycic/askSecurityQuestion"
			],
			"js": [
				"jquery-3.1.0.min.js",
				"content_security.js"
			]
		}
	],
	"icons": {
		"16": "images/icons/16.png",
		"19": "images/icons/19.png",
		"38": "images/icons/38.png",
		"64": "images/icons/64.png",
		"128": "images/icons/128.png"
	}
}